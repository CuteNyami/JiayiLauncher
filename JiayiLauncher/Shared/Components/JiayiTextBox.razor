<input type="text" class="textbox" placeholder="@Placeholder" style="@Style" @oninput="OnChange">

@code {
    [Parameter]
    public string? Placeholder { get; set; }
    
    [Parameter]
    public string? Style { get; set; }
    
    [Parameter]
    public EventCallback Changed { get; set; }
    
    public string? Value { get; set; }

    private void OnChange(ChangeEventArgs obj)
    {
        if (obj.Value is not string value) return;
        Value = value;
        Changed.InvokeAsync();
    }

}