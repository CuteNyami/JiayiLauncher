<div>
    <p>@Message</p>
    
    <div style="display: flex; gap: 0.5rem;">
        @foreach (var (name, callback) in Buttons)
        {
            <JiayiButton Size="20px" Style="padding: 0.5rem 1rem;" OnClick="(() => { Modal.CloseAsync(); callback.InvokeAsync(); })">@name</JiayiButton>
        }
    </div>
</div>

@code {
    [Parameter]
    public List<(string, EventCallback)> Buttons { get; set; }
    
    [Parameter]
    public string Message { get; set; }
    
    [CascadingParameter]
    private BlazoredModalInstance Modal { get; set; } = default!;
}